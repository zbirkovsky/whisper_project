# CloudCall Transcription Configuration
# Copy this file to .env and customize for your environment

# Application Paths
CLOUDCALL_APP_DIR=C:\Users\YourUser\.cloudcall
CLOUDCALL_MODELS_DIR=C:\Users\YourUser\.cloudcall\models

# Transcription Settings
CLOUDCALL_WHISPER_MODEL=base
CLOUDCALL_COMPUTE_TYPE=float16
CLOUDCALL_BATCH_SIZE=16
CLOUDCALL_DEVICE=cuda

# Audio Recording
CLOUDCALL_SAMPLE_RATE=48000
CLOUDCALL_CHANNELS=2
CLOUDCALL_CHUNK_SIZE=512

# Speaker Diarization
# Get your token from: https://huggingface.co/settings/tokens
# Accept terms at: https://huggingface.co/pyannote/speaker-diarization
CLOUDCALL_HF_TOKEN=your_huggingface_token_here

# UI Settings
CLOUDCALL_THEME=auto

# Logging
CLOUDCALL_LOG_LEVEL=INFO
CLOUDCALL_LOG_FILE=C:\Users\YourUser\.cloudcall\app.log
